"auto cmd
autocmd BufWritePost ~/.config/nvim/init.vim so ~/.config/nvim/init.vim

"encode
set encoding=utf-8
scriptencoding utf-8

"help
set helplang=ja

"number
set number

"
inoremap { {}<LEFT>
inoremap [ []<LEFT>
inoremap ( ()<LEFT>
inoremap " ""<LEFT>
inoremap ' ''<LEFT>

"clipboard
set clipboard=unnamedplus

"split
set splitbelow
set splitright

"tab
set expandtab
set tabstop=4
set shiftwidth=2
